
{% extends 'base.html.twig' %}

{% block body %}



<form method='POST'>

<div class='container-fluid'>
<div class='row'>
<div class='col-md-12'>
<div class='bloc_form'>
<h1 class='display-2'>Formulaire Personnage</h1>
<div class=''><input type='submit' name='valid_perso' value='Valider' /></div>
    <p>
        <label>Nom : </label>
        <input type='text' name='nom' value='{{personnage.nom}}'/>
    </p>
    <p>
        <label>Race : </label>
        <select class='form-select' name='race' id='select_race'>
            {% for race in races %}
                <option {{ (personnage.race == race) ? 'selected' : '' }} value='{{race.id}}'>{{race.titre}}</option>
            {% endfor %}
        </select>
    
    </p>
    
    
    <p>
        <label>Thème : </label>
        <select class='form-select' name='theme' id='select_theme'>
            {% for theme in themes %}
                <option {{ (personnage.themes == theme) ? 'selected' : '' }} value='{{theme.id}}'>{{theme.titre}}</option>
            {% endfor %}
        </select>
    
    </p>
    <p>
        <label>Classe : </label>
        <select class='form-select' name='classe' id='select_classe'>
            {% for classe in classes %}
                <option {{ (personnage.classe == classe) ? 'selected' : '' }} value='{{classe.id}}'>{{classe.titre}}</option>
            {% endfor %}
        </select>
    
    </p>
    </div>
    </div>
    </div>
    <div class='row'>
    <div class='col-md-6'>
    <div class='bloc_form'>
